%nav.navbar.navbar-everbook
  .container
    .navbar-brand=link_to "Everbook", root_path
    %form.navbar-form.navbar-left{role: 'search'}
      .form-group
        .input-group
          %span.input-group-addon.btn e
          %input.form-control{type: 'text', placeholder: 'Search'}
          %span.input-group-addon.btn q
    - if user_signed_in?
      %ul.nav.navbar-nav.navbar-right
        %li= link_to "EXPLORE", '#'
        %li= link_to "SHOP", '#'
        %li= link_to "INVITE", '#'
    - else
      %ul.nav.navbar-nav.navbar-right
        %li= link_to "Sign Up", new_user_registration_path
        %li= link_to "Sign In", new_user_session_path
