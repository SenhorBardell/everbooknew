#pins.transitions-enabled
  .box.wrapper
    .panel.panel-default
      .panel-content
        .panel-body
          .btn.btn-block.btn-orange UPLOAD YOUR IMAGE
          .input-group.tag-filter
            %input.form-control{type: 'text'}
            %span.input-group-addon.btn.btn-black
              %span.fa.fa-caret-down
    .panel.panel-default
      .panel-content
        .panel-body
          %h3 Hashtags
          .hashtags-container
            %a.hashtag{href: "#"}
              ="#summer2016vacation"
              %span.close ×
            %a.hashtag{href: "#"}
              ="#summer2016"
              %span.close ×
            %a.hashtag{href: "#"}
              ="#use"
              %span.close ×
            %a.hashtag{href: "#"}
              ="#summerfamily"
              %span.close ×
    .panel.panel-default
      .panel-content
        .panel-body
          = link_to "view all", family_bonds_path, class: "pull-right orange help"
          %h3 Friends
          - current_user.family.each do |friend|
            %div.friend{title: friend.email}
  - @pins.each do |pin|
    .box.panel.panel-default
      .panel-content
        .photo-wrap
          = link_to (image_tag pin.image.url(:medium), class: "image"), pin
        .panel-body
          .description
            = raw pin.description
          .hashtags
            = raw pin.tag_list.map { |t| link_to "##{t}", tag_path(t) }.join('  ')
          .friends
            .icon.first
            .icon.second
            .icon.other
        .footer
          %span.pull-right
            %span.fa.fa-comments-o
            23
            %span.orange (+3)
          %a
            %span.avatar-mini
            %span.author Robin M. Rivers
